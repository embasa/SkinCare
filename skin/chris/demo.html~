<!doctype html>
<html>
 <head>
    <meta charset=utf-8>
    <link href="bootstrap.min.css" rel="stylesheet" type="text/css" />
    <title>SkinCity Database</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
    function getData(filter) {
      $('#dataTable').empty();
      $.ajax({ url: 'demo.php', data: {'type': filter}, success: function(data) {
          data.forEach(function(element) {
            $('#dataTable').append('<tr><td>' + element + '</td></tr>');
          });
        }});
    }
    
    function getOptions(filter) {
		$('#dataList').empty();
		$.ajax({ url: 'demo.php', data: {'type': filter}, success: function(data) {
			data.forEach(function(element) {
				$('#dataList').append('<option value ="' + element + '">');
              });
        }});
    }
    
    </script>
  </head>
  <body>
  <h1>SkinCity Database</h1>
  <button onclick="getData('evens')">Evens</button>
  <button onclick="getData('odds')">Odds</button>
  <table id="dataTable"></table>
  <h3>Filters:</h3>
  <p>Include:
  
  <form action="submit.php" method="get">
  <input list="products" name="products">
 		 <datalist id="dataList">
    <option value="product1"></option>
    <option value ="two"></option>
  </datalist>
  <input type="submit">
</form>



<p>Exclude:
<form action="" method="post">
  <input list="products" name="products">
 		 <datalist id="exclude">
    <option value="product1">
  </datalist>
  <input type="submit">
</form>
 </body>
</html>
